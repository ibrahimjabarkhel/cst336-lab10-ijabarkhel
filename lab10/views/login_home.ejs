<%- include ./partials/header %>

    <div class='container text-center'>
    	<div class='jumbotron'>
    	    <div class="row">
    	        <div class="col-sm-6">
        		    <h3> Click to Log Out </h3>
    	            <a class='btn btn-primary' href='/logout'>Log Out</a>
        		</div>
        			
	            <div class="col-sm-6">
        		    <h3> Add New Author here.</h3>
		            <a class='btn btn-primary' href='/new/author'>Add New Author</a>
        		</div>
        	</div>
    		<!--%="\xa0\xa0\xa0\xa0\xa0%>-->
    	</div>

    	
        <div class='row'>
            <!--<a class='btn btn-primary' href='/new/author'>New Author</a>-->
            <%if(!authors){%>
                <h1 class='col-sm-12 nofound'>Empty database. Please add the first author!</h1>    
            <%}
            else{%>
                <div class="col-sm-12">
                	<table>
                	    <tr><th>ID</th> <th>FirstName</th> <th>lastName</th>  <th>DOB</th> <th> DOD</th> <th> Action</th></tr>
                	    <hr>
                		<tr><td colspan="6"><hr/></td></tr>
                		<%authors.forEach(function(author){%>
                		    <%author.dob = author.dob.toString().split(' ').slice(0,4).join(' ');%>
                            <%author.dod = author.dod.toString().split(' ').slice(0,4).join(' ');%>
                    		<tr>
                    		    <td><%=author.authorId%></td>
                    			<td><%=author.firstName%></td>
                    			<td><%=author.lastName%></td>
                    			<td><%=author.dob%></td>
                    			<td><%=author.dod%></td>
                    			<td><a href='/author/<%=author.authorId%>'>  <%="\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0\xa0"%>Info</a>
                    			| <a href='/author/<%=author.authorId%>/edit'>Edit</a>
                    			| <a href='/delete/<%=author.authorId%>'>Delete</a> </td></tr>
                		<%});%>
                	</table>
                </div>
            <%}%>
        </div>
    
    </div>

<%- include ./partials/footer %>
